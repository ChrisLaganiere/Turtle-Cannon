package{	import flash.display.MovieClip;	import flash.events.Event;		public class MovingCannon extends Cannon	{		private var _vx:Number = 20*(0.5-Math.random());		private var _vy:Number = 0;				override public function frameActions():void		{			if (Collision.checkVisible(this))			{				if (this.hitTestObject(MovieClip(parent).player))				{					Collision.cannonBlock(MovieClip(parent).player, this);				}				this.x += _vx;				this.y += _vy;								boundaries();			}		}		private function boundaries():void		{			if (this.x < this.width/2)			{				this.x = this.width/2;				_vx *= -1;			}			else if (this.x > Main.stageW - this.width/2)			{				this.x = Main.stageW - this.width/2;				_vx *= -1;			}		}	}}