package{	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.TouchEvent;		public class Main extends MovieClip	{		public static var nextLevel:int = 0;		public static var lastLevel:int = 0;		public static var startLevel:Boolean = true;		public static var stageW:int = 480;		public static var stageH:int = 800;		public static var endLevel:Boolean = false;		public static var currentObject:MovieClip;		public static var difficulty:int = 2;				var startPage:StartPage;		var winPage:WinPage;		var killPage:KillPage;		var level1:Level1;				public function Main()		{			addEventListener(Event.ENTER_FRAME,onEnterFrame);		}				private function onEnterFrame(event:Event):void		{			if (endLevel)			{				//Remove current level				removeChild(currentObject);				currentObject = null;				endLevel = false;			}			if (startLevel)			{				//Add new level				if (nextLevel == -2)				{					winPage = new WinPage;					addChild(winPage);					currentObject = winPage;				}				if (nextLevel == -1)				{					killPage = new KillPage;					addChild(killPage);					currentObject = killPage;				}				if (nextLevel == 0)				{					startPage = new StartPage;					addChild(startPage);					currentObject = startPage;				}				if (nextLevel == 1)				{					level1 = new Level1;					addChild(level1);					currentObject = level1;					lastLevel = 1;				}				//align bottom of screen with bottom of level				currentObject.y = stageH - currentObject.height;				startLevel = false;			}			currentObject.frameActions();		}	}}